# GCP Configuration
project_id   = "your-gcp-project-id"
region       = "us-central1"
zone         = "us-central1-a"  # Single zone to minimize quota usage
cluster_name = "distributed-kv-cache"

# Gateway Pool Configuration (Optimized for light workload)
gateway_node_count = 1
gateway_min_nodes  = 1
gateway_max_nodes  = 2

# Worker Pool Configuration (Optimized for light workload)
worker_node_count    = 2
worker_min_nodes     = 1
worker_max_nodes     = 3
worker_machine_type  = "e2-standard-4"  # 4 vCPU, 16GB RAM

# GPU Configuration (disabled by default for cost savings)
# For CPU-only demo deployment (recommended for light workload):
enable_gpu = false

# To enable GPU (increases cost significantly):
# enable_gpu = true
# gpu_type   = "nvidia-tesla-t4"
# gpu_count  = 1
# worker_machine_type = "n1-standard-4"  # GPU requires N1 series
